                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:textSize="17dp"
                                                android:textStyle="italic"
                                                android:lineSpacingExtra="2dp"
                                                android:textColor="@color/Indeed"
